<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/numerical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="30dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="9dp"
                android:text="Numerical Aptitude"
                android:textColor="@color/textcolor"
                android:textSize="24dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/perceptual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numerical"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="30dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="9dp"
                android:text="Perceptual Aptitude"
                android:textColor="@color/textcolor"
                android:textSize="24dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/AR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/perceptual"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="30dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="9dp"
                android:text="Abstract Reasoning"
                android:textColor="@color/textcolor"
                android:textSize="24dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/spatial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/AR"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="30dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="9dp"
                android:text="Spatial Aptitude"
                android:textColor="@color/textcolor"
                android:textSize="24dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/verbal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spatial"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="30dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="9dp"
                android:text="Verbal Reasoning"
                android:textColor="@color/textcolor"
                android:textSize="24dp" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</ScrollView>