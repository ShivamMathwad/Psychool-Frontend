<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient2"
    android:fillViewport="true"
    tools:context=".Results">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/personality_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="9dp"
                android:text="Personality Test Result"
                android:textColor="@color/textcolor"
                android:textSize="24dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/numerical_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/personality_result"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="9dp"
                android:textAlignment="center"
                android:text="Numerical Aptitude Result"
                android:textColor="@color/textcolor"
                android:textSize="24dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/perceptual_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numerical_result"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="9dp"
                android:textAlignment="center"
                android:text="Perceptual Aptitude Result"
                android:textColor="@color/textcolor"
                android:textSize="24dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/abstract_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/perceptual_result"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="9dp"
                android:textAlignment="center"
                android:text="Abstract Reasoning Result"
                android:textColor="@color/textcolor"
                android:textSize="24dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/spatial_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/abstract_result"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="9dp"
                android:textAlignment="center"
                android:text="Spatial Aptitude Result"
                android:textColor="@color/textcolor"
                android:textSize="24dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/verbal_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spatial_result"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="9dp"
                android:textAlignment="center"
                android:text="Verbal Reasoning Result"
                android:textColor="@color/textcolor"
                android:textSize="24dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/interest_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/verbal_result"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="9dp"
                android:textAlignment="center"
                android:text="Interest Test Result"
                android:textColor="@color/textcolor"
                android:textSize="24dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/recommendation_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/interest_result"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="9dp"
                android:textAlignment="center"
                android:text="Career Recommendation"
                android:textColor="@color/textcolor"
                android:textSize="24dp" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</ScrollView>